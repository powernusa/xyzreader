<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.powernusa.andy.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:src="@drawable/empty_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"/>
        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Article Title"
            android:textColor="@android:color/white"
            android:paddingLeft="@dimen/cardview_left_right_padding"
            android:paddingRight="@dimen/cardview_left_right_padding"
            android:paddingTop="@dimen/cardview_top_right_padding"/>
        <TextView
            android:id="@+id/article_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="article_subtitle"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:paddingLeft="@dimen/cardview_left_right_padding"
            android:paddingRight="@dimen/cardview_left_right_padding"
            android:paddingTop="8dp"/>
        <TextView
            android:id="@+id/article_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="article_author"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:maxLines="1"
            android:paddingLeft="@dimen/cardview_left_right_padding"
            android:paddingRight="@dimen/cardview_left_right_padding"
            android:paddingTop="8dp"
            android:paddingBottom="@dimen/cardview_top_right_padding"/>


    </LinearLayout>

</android.support.v7.widget.CardView>