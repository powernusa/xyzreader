<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/about_activity_margin_left"
    android:layout_marginRight="@dimen/about_activity_margin_right">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="30dp"
        android:text="@string/about_activity_app_title"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="35dp"
        android:gravity="right"
        android:id="@+id/imageLayout">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/info_string"
        android:layout_below="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@string/info_string"
        android:textSize="@dimen/article_detail_text_size"/>
    <TextView
        android:id="@+id/modified_by"
        android:paddingTop="20dp"
        android:layout_below="@+id/info_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_activity_modified_by"
        android:textStyle="italic"
        android:gravity="right"
        android:textSize="@dimen/article_detail_text_size"
        />
    <TextView
        android:id="@+id/programmer"
        android:layout_below="@+id/modified_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_andy"
        android:textSize="@dimen/programmer_text_size"
        android:gravity="right"
        android:textColor="@color/colorPrimaryDark"
        />
</RelativeLayout>